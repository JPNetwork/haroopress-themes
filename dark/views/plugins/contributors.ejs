    <% if(contributors.display) { %>
    <div class="well contributors">
		<div class="pull-right">
			<a href="/authors"><i class=" icon-info-sign"></i></a>
		</div>
        <h6 class="title">contributors</h6>
        <% for(var id in authors) {
            var author = authors[id];
        %>
        <ul>
            <li>
                <a class="pull-left" href="/authors/<%= author.head.name %>" title="<%= author.head.body %>">
    				<img src="<%= author._gravatar %>" />
    			</a>
                <strong><%= author.head.name %></strong><br/>
                <a href="https://twitter.com/#!/<%= author.head.twitter %>" target="_blank">@<%= author.head.twitter %></a>
            </li>
        </ul>
        <% } %>
    </div>
    <% } %>