<!-- Masthead (blueprinty thing)
================================================== -->
<header class="jumbotron masthead" id="overview">
    <div class="inner">
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="span3">
            <%- partial('plugins/category-menu', { categories: categories }) %>
            <%- partial('plugins/recents', { config: config.recents, archives: archives }) %>
            <%- partial('plugins/favorites', favorites) %>
        </div>
        <div class="span9">
            <div class="row">
                <div class="span9">
                    <div class="well bg">
                        <div class="page-header">
                            <h1>Authors</h1>
                        </div>
                        <div class="markdown">
                            <ul class="thumbnails">
                                <% for(var author in authors) { %>
                                <li class="thumbnail">
                                    <a href="/authors/<%= authors[author].head.name %>" style="text-align: center;">
                                        <img src="<%= authors[author]._gravatar.replace('128.jpg', '220.jpg') %>"/>
                                    </a>
                                    <div class="caption">
                                        <p>
                                            <%= authors[author].head.name %>
                                            <span class="badge badge-info"><%= authors[author].archives.length %></span>
                                        </p>
                                        <p>
                                            <a href="https://twitter.com/<%= authors[author].head.twitter %>" class="twitter-follow-button" data-show-count="true" data-show-screen-name="false">Follow @<%= authors[author].head.twitter %></a>
                                            <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
                                        </p>
                                        <div>
                                            <iframe src="http://githubbadge.appspot.com/badge/rhiokim?s=1&a=0" style="border: 0;height: 128px; width: 200px;overflow: hidden;" frameBorder=0></iframe>
                                        </div>
                                    </div>
                                </li>
                                <% } %>
                            </ul>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="span8">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
            </div>
        </div>
    </div>
</div><!-- /container -->
